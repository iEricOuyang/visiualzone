<div class="map">
    <svg height={{height}} width={{width}} class="map-svg">
        <defs>
            <filter id="label-shadow">
                <feGaussianBlur in="SourceGraphic" stdDeviation="3" style="fill:red;" result="blur"/>
            </filter>
            <filter id="map-offset" x="0" y="0" width="100%" height="105%">
                <feGaussianBlur in="SourceGraphic" stdDeviation="20" result="blur"/>
                <feOffset in="blur" dx="0" dy="20" result="offset"/>
                {{!-- <feFlood flood-color="#3D4574" result="flood" />
                <feComposite operator="in" in="offset" in2="flood" result="composite"/> --}}
                   <feBlend in="SourceGraphic" in2="offset" model="normal"></feBlend>   
                  {{!-- <feMerge>
                    <feMergeNode in="offset"></feMergeNode>
                    <feMergeNode in="blur"></feMergeNode>
                     <feMergeNode in="SourceGraphic"></feMergeNode> 
                </feMerge>   --}}
            </filter>
        </defs>
    </svg>
</div>